@using İkinciElKitapSatisVol1.Models
@{
    ViewBag.Title = "AlinanSiparisDetayi";
}

<h2>AlinanSiparisDetayi</h2>








<div class="card">
    <div class="card-body">
        <h5 class="card-title">Kitaplar</h5>
        <div class="table-responsive">
            <div id="zero_config_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="zero_config" class="table table-striped table-bordered dataTable" role="grid" aria-describedby="zero_config_info">
                            <thead>
                                <tr role="row">
                                    <th class="sorting_asc" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1" aria-sort="ascending"
                                        aria-label="ID: activate to sort column descending" style="width: 110px;">Sipariş ID</th>
                                    <th class="sorting_asc" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1" aria-sort="ascending"
                                        aria-label="ID: activate to sort column descending" style="width: 110px;">Detay ID</th>
                                    <th class="sorting" tabindex="0" aria-controls="zero_config"
                                        rowspan="1" colspan="1" aria-label="Satıcı: activate to sort column ascending" style="width: 100px;">Satıcı</th>
                                    <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1" aria-label="Musteri: activate to sort column ascending"
                                        style="width: 195.438px;">Müşteri</th>
                                    <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1" aria-label="Kargo: activate to sort column ascending"
                                        style="width: 198px;">Kargo Firması</th>
                                    <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1" aria-label="Yetkili: activate to sort column ascending"
                                        style="width: 166.188px;">Kargo Firması Yetkilisi</th>
                                    <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1" aria-label="Kargo fİRM: activate to sort column ascending"
                                        style="width: 156.094px;">Kargo Firması İletişim</th>
                                    <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1" aria-label="Kitap Adı : activate to sort column ascending"
                                        style="width: 100px;">Kitap Adı</th>
                                    <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1" aria-label="Birim Fiyatı : activate to sort column ascending"
                                        style="width: 100px;">Birim Fiyatı</th>
                                    <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1" aria-label="Müşteri Adres : activate to sort column ascending"
                                        style="width: 100px;">Müşteri Adres</th>
                                    <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1" aria-label="İlçe/il : activate to sort column ascending"
                                        style="width: 100px;">İlçe/İl</th>

                                </tr>
                            </thead>
                            <tbody>
                               

                                    <tr role="row" class="odd">
                                        <td class="sorting_1">@ViewBag.detayy.SiparisID </td>
                                        <td>@ViewBag.detayy.ID</td>
                                        <td>@ViewBag.detayy.satici</td>
                                        <td>@ViewBag.detayy.Musteri</td>
                                        <td>@ViewBag.detayy.KargoFirmasiAdi</td>
                                        <td>@ViewBag.detayy.YetkiliAd</td>
                                        <td>@ViewBag.detayy.KargoFirmasiTel</td>
                                        <td>@ViewBag.detayy.KitapAdi</td>
                                        <td>@ViewBag.detayy.BirimFiyat Tl</td>
                                        <td>@ViewBag.detayy.Adres</td>
                                        <td>@ViewBag.detayy.ilceKodu/@ViewBag.detayy.ilKodu</td>

                                    </tr>


                                

                            </tbody>
                            <tfoot>
                                <tr><th rowspan="1" colspan="1">Sipariş ID</th><th rowspan="1" colspan="1">Satıcı</th><th rowspan="1" colspan="1">Müşteri</th><th rowspan="1" colspan="1">Kargo Firması</th><th rowspan="1" colspan="1">Kargo Firması Yetkilisi</th><th rowspan="1" colspan="1">Kargo Firması İletişim</th><th rowspan="1" colspan="1">Kitap Adı</th><th rowspan="1" colspan="1">Birim Fiyatı</th><th rowspan="1" colspan="1">Adres</th><th rowspan="1" colspan="1">İlçe/İl</th></tr>
                            </tfoot>
                        </table>

                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


