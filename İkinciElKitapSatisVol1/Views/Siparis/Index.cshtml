    <script>
        /****************************************
         *       Basic Table                   *
         ****************************************/
        $('#zero_config').DataTable();
    </script>

    <script>
        $(".modalAc").click(function () {
            var siparisTarihi = $(this).attr("data-sipTar");
            var id = $(this).attr("data-SipID");
            $(".SiparisSil").data("SipID", id);
            $(".modal-body>p.SiparisID").html(id + " numaralı " + siparisTarihi + " tarihli sipariş silinsin mi?");

        });


        $(".SiparisSil").click(function () {
            var id = $(this).data("SipID");
            $.ajax({

                type: "POST",
                url: "/Siparis/SiparisSil/" + id,
                success: function (durum) {
                    if (durum) {
                        window.location.replace("/Siparis/Index");
                    }
                    else {
                        alert("Silme işlemi sırasında hata oluştu.");
                    }
                }
            }
            );

        });

    </script>
}

