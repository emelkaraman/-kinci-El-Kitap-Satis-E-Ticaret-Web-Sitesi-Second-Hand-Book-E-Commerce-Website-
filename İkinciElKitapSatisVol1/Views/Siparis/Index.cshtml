@using İkinciElKitapSatisVol1.Models;
@model List<Kitap>
@{
    ViewBag.Title = "Siparislerim";
}

<h2>Siparislerim</h2>

@section body{
    <div class="modal fade" id="Modal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Sipariş iptal edilsin mi?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p class="SiparisID SiparisTar"> </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                    <button type="button" class="btn btn-primary SiparisSil">Sil</button>
                </div>
            </div>
        </div>
    </div>
}
@if (User.IsInRole("3"))
{
    <div class="row">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Verdiğim Siparişler</h5>
                <div class="table-responsive">
                    <div id="zero_config_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="zero_config" class="table table-striped table-bordered dataTable" role="grid" aria-describedby="zero_config_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting_asc" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1" aria-sort="ascending"
                                                aria-label="SiparisID: activate to sort column descending" style="width: 250.922px;">Sipariş ID</th>
                                            <th class="sorting" tabindex="0" aria-controls="zero_config"
                                                rowspan="1" colspan="1" aria-label="SiparisTarihi: activate to sort column ascending" style="width: 392px;">Sipariş Tarihi</th>
                                            <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1" aria-label=" MusteriID: activate to sort column ascending"
                                                style="width: 195.438px;">Müşteri</th>
                                            <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1" aria-label=" ToplamTutar: activate to sort column ascending"
                                                style="width: 195.438px;">Toplam Tutar</th>
                                            <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1" aria-label=" Detay: activate to sort column ascending"
                                                style="width: 195.438px;">Detay Görüntüle</th>
                                            <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1" aria-label=" Fatura: activate to sort column ascending"
                                                style="width: 195.438px;">Fatura</th>
                                            <th class="sorting" tabindex="0" aria-controls="zero_config" rowspan="1" colspan="1" aria-label=" İptal: activate to sort column ascending"
                                                style="width: 195.438px;">Siparişi İptal Et</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.VerilenSiparis != null)
                                        {
                                            foreach (Siparis item in ViewBag.VerilenSiparis)
                                            {

                                                <tr role="row" class="odd">
                                                    <td class="sorting_1">@item.SiparisID</td>
                                                    <td>@item.SipTarihi</td>
                                                    <td>@item.MusteriID</td>
                                                    <td>@item.ToplamTutar</td>



                                                    <td>
                                                        <a href="/Siparis/VerilenSiparisDetayi/@item.SiparisID" style="width: 150px; height: 50px" class="btn btn-primary">Sipariş Detayı</a>
                                                    </td>
                                                    <td>
                                                        <a href="/Siparis/Fatura/@item.SiparisID" style="width: 150px; height: 50px" class="btn btn-primary">Fatura</a>
                                                    </td>
                                                    <td>
                                                        <button type="button" class="btn btn-warning margin-5 text-white modalAc" data-SipID="@item.SiparisID" data-sipTar="@item.SipTarihi" data-toggle="modal" data-target="#Modal2">
                                                            İptal Et
                                                        </button>
                                                    </td>
                                                </tr>

                                            }
                                        }


                                    </tbody>
                                    <tfoot>
                                        <tr><th rowspan="1" colspan="1">Sipariş ID</th><th rowspan="1" colspan="1">Sipariş Tarihi</th><th rowspan="1" colspan="1">Müşteri</th><th rowspan="1" colspan="1">Toplam Tutar</th><th rowspan="1" colspan="1">Detay Görüntüle</th><th rowspan="1" colspan="1">Siparişi İptal Et</th>
                                    </tfoot>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
}


@if (User.IsInRole("2"))
{
    <div class="col-xl-5 col-lg-5 col-md-5 col-sm-5 col-5">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Alınan Siparişler</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <div id="example4_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="example4" class="table table-striped table-bordered dataTable" style="width:90%" role="grid" aria-describedby="example4_info">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting_asc" tabindex="0" aria-controls="example4" rowspan="1" colspan="1" aria-sort="ascending"
                                                aria-label="SiparisID: activate to sort column descending" style="width: 255.422px;">Sipariş ID</th>
                                            <th class="sorting" tabindex="0" aria-controls="example4" rowspan="1" colspan="1"
                                                aria-label="Siparist: activate to sort column ascending" style="width: 417.844px;">Sipariş Tarihi</th>
                                            <th class="sorting" tabindex="0" aria-controls="example4" rowspan="1" colspan="1"
                                                aria-label="Müşteri ID: activate to sort column ascending" style="width: 417.844px;">Müşteri ID</th>
                                            <th class="sorting" tabindex="0" aria-controls="example4" rowspan="1" colspan="1"
                                                aria-label="Toplam Tutar: activate to sort column ascending" style="width: 417.844px;">Toplam Tutar</th>
                                            <th class="sorting" tabindex="0" aria-controls="example4" rowspan="1" colspan="1"
                                                aria-label="Detay: activate to sort column ascending" style="width: 417.844px;">Detay</th>
                                    </thead>

                                    <tbody>
                                        @if (ViewBag.AlinanSiparis != null)
                                        {
                                            foreach (SiparişDetayı item in ViewBag.AlinanSiparis)
                                            {

                                                <tr role="row" class="odd">
                                                    <td class="sorting_1">@item.SiparisID</td>
                                                    <td>@item.SipTarihi</td>
                                                    <td>@item.Musteri</td>
                                                    <td>@item.BirimFiyat</td>
                                                    <td>
                                                        <a href="/Siparis/AlinanSiparisDetayi/@item.SiparisID" style="width: 150px; height: 50px" class="btn btn-primary">Sipariş Detayı</a>
                                                    </td>
                                                </tr>

                                            }
                                        }


                                    </tbody>
                                    <tfoot>
                                        <tr><th rowspan="1" colspan="1">Sipariş ID</th><th rowspan="1" colspan="1">Sipariş Tarihi</th><th rowspan="1" colspan="1">Müşteri ID</th><th rowspan="1" colspan="1">Toplam Tutar</th><th rowspan="1" colspan="1">Detay</th></tr>
                                    </tfoot>
                                </table>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}


