@using İkinciElKitapSatisVol1.Models
@model DetayliKitapBilgisi
@{
    ViewBag.Title = "UrunDetayiGetir";
}

<h2>UrunDetayiGetir</h2>


<div class="row">
    <div class="offset-xl-2 col-xl-8 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="row">
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 pr-xl-0 pr-lg-0 pr-md-0  m-b-30">
                <div class="product-slider">
                    <div id="productslider-1" class="product-carousel carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class=""></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2" class=""></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item">
                                <img class="d-block" src="@Model.imgpath" alt="First slide">
                            </div>
                            <div class="carousel-item active">
                                <img class="d-block" src="@Model.imgpath" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block" src="@Model.imgpath" alt="Third slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 pl-xl-0 pl-lg-0 pl-md-0 border-left m-b-30">
                <div class="product-details">
                    <div class="border-bottom pb-3 mb-3">
                        <h2 class="mb-3">@Model.KitapAd</h2>

                        <h3 class="mb-0 text-primary">@Model.Fiyat Tl</h3>
                    </div>
                        <div class="product-qty">
                            <h3>Adet</h3>
                            <div class="quantity">
                                <h5 class="mb-0 text-primary">@Model.Adet</h5>
                            </div>
                        </div>
                    
                    <div class="product-description">
                        <h4 class="mb-1">Özellikleri</h4>
                        <p>
                            Yazar Adı:@Model.yazaradi <br />
                            Kategori: @Model.kategadi<br />
                            Alt Kategori: @Model.altkatadi<br />
                            Satıcı: @Model.saticiad 
                        </p>
                        <a href="/Kitap/SepeteEkle/@Model.KitapID" class="btn btn-primary btn-block btn-lg">Sepete Ekle</a>
                    </div>


                </div>
            </div>
        </div>

    </div>
</div>

<script src="~/Content/assets/vendor/jquery/jquery-3.3.1.min.js"></script>
<!-- bootstap bundle js -->
<script src="~/Content/assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
<!-- slimscroll js -->
<script src="~/Content/assets/vendor/slimscroll/jquery.slimscroll.js"></script>
<!-- main js -->
<script src="~/Content/assets/libs/js/main-js.js"></script>

