@using İkinciElKitapSatisVol1.Models
@model Kitap
@{
    ViewBag.Title = "KitapYazarIliski";
}

<h2>Lütfen Kitabın Yazarını Seçiniz</h2>

<div class="card">
    <form action="/Kitap/KitapYazarİliski" method="post" role="form" class="form-vertical">
        <div class="card-body">
            <h4 class="card-title">Kitabın Yazarını Seçiniz</h4>


            <div class="form-group row">
                <label for="fname" class="col-sm-3 text-right control-label col-form-label">Kitap</label>
                <div class="col-sm-2">
                    <input style="margin-left:12px; width:200px" type="text" readonly class="form-control" id="@Model.KitapID" value="@Model.KitapID" name="KitapID">
                </div>
            </div>
            <div class="form-group row">
                <label for="exampleInputPassword1" class="col-sm-3 text-right control-label col-form-label">Yazarlar</label>
                <select style="margin-left:15px" class="col-sm-3 form-control" name="YazarID">
                    @foreach (Yazar item in ViewBag.Yazar)
                    {
                        <option value="@item.YazarID">@item.YazarAdi</option>

                    }
                </select>
            </div>

        </div>
        <div class="border-top">
            <div class="card-body">
                <button style="margin-left:450px" type="submit" class="btn btn-primary">Ekle</button>
            </div>
        </div>
    </form>
</div>

